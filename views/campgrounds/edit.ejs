<% layout('layouts/boilerplate')%>
    

    <div id="form">
        <h1>Update Campground</h1>
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="validated-form" novalidate enctype="multipart/form-data">
                <div class="input-group">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="campground[title]" id="title" placeholder="title" value="<%=campground.title%>" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">This field is required</div>
                </div>
                <div class="input-group">
                    <label for="location" class="form-label">Nearest City</label>
                    <input type="text" class="form-control" name="campground[location]" id="location" placeholder="location" value="<%=campground.location%>" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">This field is required</div>
                </div>
                <div class="input-group">
                    <label for="image" class="form-label">Image</label>  
                    <input type="file" name="image" multiple>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">This field is required</div>
                </div>
                <div class="input-group">
                    <label for="description" class="form-label">Description, Including Seasonability and Directions from Nearest City</label>
                    <textarea type="text" class="form-control" name="campground[description]" id="description" placeholder="description"><%=campground.description%></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">This field is required</div>
                </div>
                <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text">$</span>
                    </div>
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="campground[price]" id="price" value="<%=campground.price%>">
                    <!-- <div class="input-group-append">
                      <span class="input-group-text">.00</span>
                    </div> -->
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">This field is required</div>
                </div>
                <div id="delete-images">
                    <% for(let i=0; i<campground.images.length; i++) { %>
                        <div class="delete-image">
                            <img src="<%=campground.images[i].thumbnail%>" class="img-thumbnail" alt="">
                            <div class="form-check-inline mb-3">
                                <input type="checkbox" name="deleteImages[]" value="<%=campground.images[i].filename%>" id="img<%=i%>">
                                <label for="img<%=i%>">Delete?</label>
                            </div>
                        </div>
                    <% } %>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>           
            <a href="/campgrounds/<%=campground._id%>">Back to Campground</a>
        </div>
    </div>



